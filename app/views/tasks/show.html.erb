<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<p>
  <% if @task.completed == true %>
    <p><input type="checkbox" checked>
    <%= "This task is completed" %></p>
    <% else %>
      <p><input type="checkbox">
    <%= "This task is not completed yet" %></p>
    <% end %>
</p>

<p><%= link_to "Edit this task", edit_path %></p>

<p><%= link_to "Back to the tasks", tasks_path %></p>
